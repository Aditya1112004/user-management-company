<!-- include header -->
<%- include('include/_header') %>


    <header >Update User</header>
    <br><br><br>
   <a href="/" class="all_btn">All users</a>

   <br><br>
   <form method="post" id="update_user">

    <label for="name"class="label">Name:</label>
    <input type="hidden" name="id" value="<%= user._id%>">
    <input type="text" name="name" id="name" value="<%= user.name%>">
    
    <br><br>

    <label for="Email"class="label">Email:</label>
    <input type="email" name="email" id="email" value="<%= user.email%>">
    
    <br><br>

    <label for=""class="label">Gender:</label>
    <label for="male"class="left">Male:</label>
    <input type="radio" class="radio" name="gender" value="Male" <%= user.gender == 'Male'?'checked':'' %>>
    <label for="female">Female:</label>
    <input type="radio" class="radio" name="gender" value="Female" <%= user.gender == 'Female'?'checked':'' %>>

    <br><br>

    <label for=""class="label">Status:</label>
    <label for="active"class="left">Active:</label>
    <input type="radio" class="radio" name="status" value="Active" <%= user.status == 'Active'?'checked':'' %>>
    <label for="Inactive">Inactive:</label>
    <input type="radio" class="radio" name="status" value="Inactive" <%= user.status == 'Inactive'?'checked':'' %>>
    
    <br><br>

    <button type="submit">Save</button>
</form>

   
<!-- include  footer -->
<%- include('include/_footer') %>